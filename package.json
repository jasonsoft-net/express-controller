  "description": "Controller extension by express router middleware",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write 'src/**/*.{js,ts,json}' --ignore-path ./.eslintignore",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonsoft/express-controller.git"
  },
  "keywords": [
    "@jasonsoft/express-controller",
    "jasonsoft",
    "express-controller",
    "express",
    "controller",
    "router",
    "mvc",
