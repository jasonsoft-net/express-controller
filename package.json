    "decorators"
  ],
  "author": "Jason Song (成长的小猪)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasonsoft/express-controller/issues"
  },
  "homepage": "https://github.com/jasonsoft/express-controller#readme",
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "glob": "^7.2.0",
    "reflect-metadata": "^0.1.13"
